<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SkeletonLoader.ESkeletonLoader"
             x:Name="Root"
             WidthRequest="{Binding Source={RelativeSource Self}, Path=Size}"
             HeightRequest="{Binding Source={RelativeSource Self}, Path=Size}">
    
    <Ellipse WidthRequest="{Binding Source={x:Reference Root}, Path=Size}"
             HeightRequest="{Binding Source={x:Reference Root}, Path=Size}">
        <Ellipse.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0" >
                <GradientStop Color="#3B3B3B" Offset="0" x:Name="GradientStop1"/>
                <GradientStop Color="#454545" Offset="0.5" x:Name="GradientStop2"/>
                <GradientStop Color="#3B3B3B" Offset="1" x:Name="GradientStop3"/>
            </LinearGradientBrush>
        </Ellipse.Background>
    </Ellipse>
</ContentView>
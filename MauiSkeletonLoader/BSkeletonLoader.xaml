<?xml version="1.0" encoding="utf-8"?>

<Border xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SkeletonLoader.BSkeletonLoader"
             x:Name="Root">
    
    <Border.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0" >
            <GradientStop Color="{Binding Source={x:Reference Root}, Path=BackgroundColor, Mode=OneWay}" Offset="0" x:Name="GradientStop1"/>
            <GradientStop Color="{Binding Source={x:Reference Root}, Path=WaveColor, Mode=OneWay}" Offset="0.5" x:Name="GradientStop2"/>
            <GradientStop Color="{Binding Source={x:Reference Root}, Path=BackgroundColor, Mode=OneWay}" Offset="1" x:Name="GradientStop3"/>
        </LinearGradientBrush>
    </Border.Background>
</Border>